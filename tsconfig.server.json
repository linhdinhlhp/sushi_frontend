{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "es2019"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "src/server.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}